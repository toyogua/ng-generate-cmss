{
  "$schema": "http://json-schema.org/schema",
  "title": "Init Options Schema",
  "type": "object",
  "description": "Options for init schematic",
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of the file",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "Enter name to file?"
    },
    "path": {
      "type": "string",
      "description": "The destination folder of the files to create.",
      "x-prompt": "Enter the destination folder:"
    }
  },
  "required": [
    "name",
    "path"
  ]
}
